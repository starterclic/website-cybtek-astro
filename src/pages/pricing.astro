---
import Layout from '~/layouts/PageLayout.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import Prices from '~/components/widgets/Pricing.astro';
import FAQs from '~/components/widgets/FAQs.astro';
import Steps from '~/components/widgets/Steps.astro';
import Features3 from '~/components/widgets/Features3.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  title: 'Pricing',
};
---

<Layout metadata={metadata}>
  <!-- HeroText Widget ******************* -->

  <HeroText
    tagline="Tarification"
    title="Des prix stellaires pour chaque voyage IA 🚀"
    subtitle="Choisissez le plan parfait qui s'aligne avec vos objectifs cosmiques d'IA."
  />

  <!-- Pricing Widget ******************* -->

  <Prices
    title="Nos tarifs"
    subtitle="Payez uniquement pour ce dont vous avez besoin"
    prices={[
      {
        title: '🎯 L\'IA Pour Les Nuls',
        subtitle: 'Idéal pour les débutants en IA',
        price: 299,
        period: 'one-time',
        items: [
          {
            description: 'Configuration de base d\'Open Interpreter',
          },
          {
            description: '1h de formation "zéro prise de tête"',
          },
          {
            description: 'Support par email pendant 1 semaine',
          },
          {
            description: 'Accès à la documentation de base',
          },
        ],
        callToAction: {
          target: '_blank',
          text: 'Commencer',
          href: 'mailto:sos@cybtek-sauveur-ia.com',
        },
      },
      {
        title: '🧠 Cerveau Augmenté',
        subtitle: 'Parfait pour aller plus loin',
        price: 599,
        period: 'one-time',
        items: [
          {
            description: 'Installation sur mesure',
          },
          {
            description: '3h de formation pro',
          },
          {
            description: '1 mois de support par e-mail',
          },
          {
            description: 'Accès à des scripts avancés',
          },
          {
            description: 'Intégration avec 1 outil existant',
          },
        ],
        callToAction: {
          target: '_blank',
          text: 'Commencer',
          href: 'mailto:sos@cybtek-sauveur-ia.com',
        },
        hasRibbon: true,
        ribbonTitle: 'populaire',
      },
      {
        title: '🚀 Turbo Boost',
        subtitle: 'Pour les pros qui veulent tout déchirer',
        price: 999,
        period: 'one-time',
        items: [
          {
            description: 'Tout du pack "Cerveau Augmenté"',
          },
          {
            description: '2h de consultation personnalisée',
          },
          {
            description: 'Intégration avec tous vos outils',
          },
          {
            description: '3 mois de support prioritaire',
          },
        ],
        callToAction: {
          target: '_blank',
          text: 'Commencer',
          href: 'mailto:sos@cybtek-sauveur-ia.com',
        },
      },
    ]}
  />

  <!-- Services Complémentaires ************** -->

  <Features3
    title="Services Complémentaires"
    subtitle="Ajoutez des super-pouvoirs à votre abonnement"
    columns={2}
    items={[
      {
        title: '🧙‍♂️ L\'Alchimiste du Prompt',
        description: 'Formation avancée au prompt engineering pour transformer vos idées en or.',
        icon: 'tabler:bulb',
        price: '299€/mois',
      },
      {
        title: '🔍 Sherlock IA',
        description: 'Enquête approfondie sur vos besoins en IA et recommandations sur mesure.',
        icon: 'tabler:search',
        price: '499€/mois',
      },
      {
        title: '💪 Boost Mon IA',
        description: 'Coaching mensuel pour muscler vos compétences en IA.',
        icon: 'tabler:muscle',
        price: '199€/mois',
      },
      {
        title: '🎨 Picasso du Dashboard',
        description: 'Création d\'interfaces utilisateur sur mesure pour vos outils IA.',
        icon: 'tabler:palette',
        price: '399€/mois',
      },
      {
        title: '🕵️‍♂️ Dr. Octopus',
        description: 'Intégration avancée de 8 outils ou plus dans votre écosystème IA.',
        icon: 'tabler:octopus',
        price: '799€/mois',
      },
      {
        title: '🚨 SOS IA',
        description: 'Service d\'assistance premium pour les urgences IA.',
        icon: 'tabler:alert-circle',
        price: '99€/mois',
      },
      {
        title: '🧠 Cerveau en Location',
        description: 'Louez un de nos experts IA pour vos projets spéciaux.',
        icon: 'tabler:brain',
        price: '1499€/jour',
      },
    ]}
  />

  <!-- Features3 Widget ************** -->

  <Features3
    title="Fonctionnalités liées aux prix"
    subtitle="Découvrez les avantages de nos offres"
    columns={2}
    items={[
      {
        title: 'Plans tarifaires évolutifs',
        description: 'Choisissez parmi une gamme de plans adaptés à différents budgets et besoins.',
        icon: 'tabler:stairs',
      },
      {
        title: 'Prix transparents',
        description: 'Détails tarifaires clairement affichés pour chaque plan, sans coûts cachés ni frais inattendus.',
        icon: 'tabler:flip-vertical',
      },
      {
        title: 'Méthodes de paiement sécurisées',
        description: 'Passerelles de paiement sécurisées pour protéger vos informations financières lors des transactions.',
        icon: 'tabler:shield-lock',
      },
      {
        title: 'Accès immédiat',
        description: 'Accès immédiat aux fonctionnalités et modèles de votre plan dès l\'abonnement.',
        icon: 'tabler:accessible',
      },
      {
        title: 'Valeur de l\'upgrade',
        description: 'Améliorez votre plan pour débloquer plus de fonctionnalités et bénéficier d\'une meilleure expérience.',
        icon: 'tabler:chevrons-up',
      },
      {
        title: 'Support 24H',
        description: 'Questions répondues via chat en direct, email ou téléphone, tous les jours de l\'année.',
        icon: 'tabler:headset',
      },
    ]}
    classes={{ container: 'max-w-5xl' }}
  />

  <!-- Steps Widget ****************** -->

  <Steps
    title="A guided journey from plans to creativity"
    tagline="simplified process"
    isReversed={true}
    items={[
      {
        title: 'Explore plans',
        icon: 'tabler:number-1',
      },
      {
        title: 'Select a plan',
        icon: 'tabler:number-2',
      },
      {
        title: 'Sign Up / Log In',
        icon: 'tabler:number-3',
      },
      {
        title: 'Review order',
        icon: 'tabler:number-4',
      },
      {
        title: 'Enter payment details',
        icon: 'tabler:number-5',
      },
      {
        title: 'Confirmation',
        icon: 'tabler:number-6',
      },
      {
        title: 'Download and start using the template(s)',
        icon: 'tabler:number-7',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1536816579748-4ecb3f03d72a?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=987&q=80',
      alt: 'Steps image',
    }}
  />

  <!-- FAQs Widget ******************* -->

  <FAQs
    title="Pricing FAQs"
    subtitle="Choosing the right plan is important, and we're here to answer your questions. If you have queries about our pricing options, you're in the right place."
    columns={1}
    items={[
      {
        title: 'Do the plans come with customer support?',
        description:
          'Absolutely, all plans include access to our dedicated customer support to assist you with any queries or concerns.',
      },
      {
        title: 'Is there a trial period for the different plans?',
        description:
          "Unfortunately, we don't offer trial periods for the plans. However, you can check out our demo section to preview the quality of our templates.",
      },
      {
        title: 'Can I switch between plans?',
        description:
          'Certainly! You can easily upgrade or downgrade your plan, at any time, to find the one that best suits your evolving requirements.',
      },
      {
        title: 'What payment methods do you accept?',
        description:
          'We accept major credit cards and online payment methods to ensure a convenient and secure transaction process.',
      },
      {
        title: 'Are there any hidden fees beyond the displayed cost?',
        description:
          'No, the subscription cost covers all the features and templates included in your chosen plan. There are no additional hidden fees.',
      },
      {
        title: 'What happens after my subscription expires?',
        description:
          'Once your subscription expires, you will lose access to the premium features. However, your account and saved templates will remain intact.',
      },
    ]}
  />

  <!-- CallToAction Widget ************* -->

  <CallToAction
    title="Ready to get started?"
    subtitle="Choose the plan that's right for you and start building amazing designs today!"
    callToAction={{
      text: 'Explore plans',
      href: '/pricing',
    }}
  />
</Layout>
